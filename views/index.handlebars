<div class="container justify-content-center">
  <div class="row">
    <div class="col-4 text-center">
      <ul>
        {{#each burgers}}
        {{#unless isEaten}}
        {{> burgers/burger-block isEaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-4 text-center">
      <form class="create-form">
        <div class="form-group">
          <label for="bur">Burger Name:</label>
          <input type="text" id="bur" name="burger_name">
        </div>
        <button type="submit" class="btn btn-primary btn-hover my-1">Add Burger</button>
      </form>
    </div>
    <div class="col-4 text-center">
      <ul>
        {{#each burgers}}
        {{#if isEaten}}
        {{> burgers/burger-block isEaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


 